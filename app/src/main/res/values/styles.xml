<resources>

    <style name="Theme.dicBible" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MenuStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/menuColorFore</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">0sp</item>
        <item name="android:paddingRight">0sp</item>
        <item name="android:paddingBottom">4sp</item>
        <item name="android:paddingTop">4sp</item>
        <item name="android:background">@color/menuColorBack</item>
    </style>

    <style name="SetStyle1" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/menuColorFore</item>
        <item name="android:background">@color/menuColorBack</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">16sp</item>
        <item name="android:layout_marginEnd">8sp</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:layout_marginBottom">4sp</item>
    </style>

    <style name="SetStyle2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/menuColorFore</item>
        <item name="android:background">@color/menuColorBack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">48sp</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:layout_marginBottom">4sp</item>
    </style>

    <style name="exitButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0sp</item>
        <item name="android:paddingRight">0sp</item>
        <item name="android:paddingBottom">0sp</item>
        <item name="android:paddingTop">0sp</item>
        <item name="android:background">@color/menuColorBack</item>
    </style>

    <style name="OnOffSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track_on</item>
        <item name="switchMinWidth">48dp</item>
    </style>
</resources>
