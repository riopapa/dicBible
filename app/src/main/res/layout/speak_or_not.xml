<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4682A1"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_dic_bible"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView android:id="@+id/promptMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/speak_or_not"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#1C3DB3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#7CA0B3"
            android:textColor="#081A59"
            android:textAllCaps="false"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>